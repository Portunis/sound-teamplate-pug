div.filter.j-example-filter
    div.filter__header
        h3.filter__header-title Filter
        img.filter__close.j-filter-close(src='/src/images/icon/icon-close.svg', alt='icon-close')
    div.filter__wrapper
        div.filter__slider
            p.filter-slider__title Duration
            include ../duration/duration
        div.filter__select
            +SimpleSelect('All Categories', [{option: '1', value: 1},{option: '2', value: 2}])
        +SimpleCheckbox('Only free sounds ')
        +SimpleCheckbox('Only my favorite sounds')
        div.filter__button
            +SimpleButton('Apply', 'filter__button-custom')