extends constants

block content
    div.sound-block.container.j-sound-block
        h3.sound-block__title Best sound effects for youtube videos
        div.sound-block__sort
            div.sound-block__sort-names
                each item in category
                    p.sort-name(class=`sort-name--${item.active}`)=item.name
            div.sound-block__filter.j-filter-block
                div.sound-block-filter__button--desktop
                    +SimpleButton({text:'Filter', jClass:'sound-block__button j-filter-button', iconRight:'setting-icon'})
                div.sound-block-filter__button--mobile
                    +SimpleButton({jClass: 'sound-block__button j-filter-button', iconLeft: 'setting-icon'})
                include components/filter/filter
        div.sound-block__sounds.j-sound-playlist
            each item in sounds
                div.sound.j-sound-item
                    div.sound__play
                        div.sound__play-button.j-sound-play
                            audio(preload='metadata').sound__audio.j-sound-file
                                source(src=`/src/sound/${item.sound}.mp3`, type='audio/mp3')
                    div.sound__info
                        p.sound__name=item.name
                        p.sound__time.j-sound-time-total
                        p.sound__time.sound__time-play.j-sound-time
                    p.sound__description=item.description
                    div.sound__author=item.author
                    div.sound__controls
                        div.sound__controls-icon.sound__controls-icon-like.j-like-sound.j-control-button
                            include ../../../../images/icon/soud-controls/like.svg
                        div.sound__controls-icon
                            include ../../../../images/icon/soud-controls/content-loading.svg
                        a.sound__controls-icon(href='/mock-address/change-me')
                            include ../../../../images/icon/soud-controls/dots.svg
        a.sound-block__all-sound(href='/mock-address/change-me') See all sound effects
