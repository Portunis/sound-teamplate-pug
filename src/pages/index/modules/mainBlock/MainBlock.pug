extends constants
include components/index
block content
    section.main-block
        img.main-block__image(src='/src/images/pictures/main-img.png', alt='main-img')
        div.main-block__information
           div.information__text
                p.information__title Free download sound effects without copyright
                p.information__subtitle Download free copyright sound effect for your YouTube video and any use.
           div.information__wrapper
               div.information__form
                   form.information__form-input
                       +SimpleInput(false,'Search sound effects', 'text', 'search-icon')
